<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <script src="https://kit.fontawesome.com/3632c5a697.js" crossorigin="anonymous"></script>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {% include('navbar.html.twig') %}
            {% endif %}

            <div class="pt-[5vh]">
                {% block body_content %}
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
