    <h1>Seed</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <td>{{ seed.title }}</td>
            </tr>
            <tr>
                <th>{{ 'text'|trans }}</th>
