{% extends 'base.html.twig' %}

{% block title %}{{ 'index.seed'|trans }}{% endblock %}

{% block body_content %}
    <h1>{{ 'index.seed'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'text'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for seed in seeds %}
            <tr>
                <td>{{ seed.title }}</td>
                <td>{{ seed.text|decrypt }}</td>
                <td>
                    <a href="{{ path('show_seed', {'id': seed.id}) }}">{{ 'show.generic'|trans }}</a>
                    <a href="{{ path('edit_seed', {'id': seed.id}) }}">{{ 'edit.generic'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'no_record'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('new_seed') }}">{{ 'create.generic'|trans }}</a>
{% endblock %}
